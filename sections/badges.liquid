<div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="slideContainer">
        {% for block in section.blocks %}
            <div class="imageContainer">
                {%- if block.settings.image != blank -%}
                    <img src="{{ block.settings.image | img_url: 'master' }}" alt="" />
                {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg'}}
                {%- endif -%}
                    <h4> {{ block.settings.title }}</h4>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    h2,
    h4 {
        text-align: center;
    }

    .slideContainer {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .imageContainer {
        width: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-bottom: 20px;
    }

    .imageContainer img {
        width: 150px;
        aspect-ratio: 1/1;
        object-fit: cover;
    }

    @media screen and (min-wdth: 600px) {
        .imageContainer img {
            width: 200px;
        }
    }

    @media screen and (min-width: 928px) {
        .imageContainer {
            width: inherit;
        }
    }
</style>


{% schema %}
    {
        "name": "Image Selector",
        "tag": "section",
        "max_blocks": 4,
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Custom Heading for Images"
            }
        ],
        "blocks": [
            {
                "type": "slide",
                "name": "Image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Select an Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Logo Name"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image Selector",
                "settings": {
                    "heading": "Image Selector"
                },
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}