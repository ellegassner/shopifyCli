
<h2>{{ section.settings.heading }}</h2>
<div class="mainContainer">
  <div class="slideContainer">
    {% for block in section.blocks %}
      <div class="imageContainer">
        <img src="{{ block.settings.image | img_url: 'master'}}"/>
      </div>
      <h4>{{ block.settings.title }}</h4>
      <p>{{ block.settings.description }}</p>
    {% endfor %}
  </div>
</div>




<style>
  h2,
  h4,
  p {
    text-align: center;
  }
  
  .imageContainer img {
    width: 6vw;
  }
  .
</style>

{% schema %}
  {
    "name": "Image Selector",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Custom Heading for Images"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "slide",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "image",
            "label": "Select an Image"
          },
          {
            "type": "text",
            "id" : "title",
            "label" : "Image Title",
            "default" : "Custom Image Title"
          },
          {
            "type": "text",
            "id" : "description",
            "label" : "Image Description",
            "default" : "Custom Image Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name":"Image Selector"
      }
    ]
  }
{% endschema %}
