<div class="page-width">
  <h2>{{ section.settings.heading }}</h2>
  <div class="slideContainer">
    {% for block in section.blocks %}
      <div class="imageContainer">
        {%- if block.settings.image != blank -%}
          <img src="{{ block.settings.image | img_url: 'master'}}" alt=""/>
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    {% endfor %}
  </div>  
</div>




<style>
  h2 {
    text-align: center;
  }

  .slideContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  .imageContainer {
    width: 50%;
    display: flex;
    justify-content: center;
    padding-bottom: 20px;
  }
  
  .imageContainer img {
    width: 150px;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  @media screen and (min-width: 600px) {
    .imageContainer img {
      width: 200px;
    }
  }

  @media screen and (min-width: 920px) {
  .imageContainer {
    width: inherit;
  }
}
  
</style>

{% schema %}
  {
    "name": "Image Selector",
    "tag": "section",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Custom Heading for Images"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Image",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "image",
            "label": "Select an Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name":"Image Selector",
        "settings": {
          "heading": "Image Selector"
        },
        "blocks": [
          {
            "type": "slide"
          },
          {
            "type": "slide"
          }
        ]
      }
    ]
  }
{% endschema %}
